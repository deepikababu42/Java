import java.util.*;
public class Main{
    public static void main(String[]args){
        Scanner Sc=new Scanner(System.in);
        //int bd = Sc.nextInt();
        //System.out.println(bd);
        String sec = Sc.next();
        String min = Sc.next();
        String hour = Sc.next();
        System.out.println(hour+":"+min+":"+sec);
        
        
    }
}
